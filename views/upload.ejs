<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles/upload.css" />
    <title>Document</title>
  </head>
  <body>
    <div id="container">
      <h1>Face Recognition</h1>

      <!-- Form starts here -->
      <form action="/upload" method="post" enctype="multipart/form-data">
        <div id="input-div">

          <!-- First Div -->
          <div class="mb-3 upload-card"> 
            <h4>Reference</h1>
            <div id="first-input-container">
            <label for="formFile" class="form-label"
              >Upload an Image here</label
            >
            <input class="form-control" type="file" name="first" id="reference-upload" onchange="storeFiles()" />
            </div>
            <div class="image-container reference-container"></div>
          </div>
          
          <!-- Seccond Div -->
          <div class="mb-3 upload-card">
            <h4>Image to check</h4>
            <div id="second-input-container">
            <label for="formFile" class="form-label"
              >Upload an Image here</label
            >
            <input class="form-control" type="file" name="second" id="check-upload" onchange="storeFiles()" />
            </div>
            <div class="image-container check-container"></div>
          </div>
        </div>

        <!-- Hidden div -->
         <div class="hidden username-div">
          <label class="form-label" for="username">What's the name of the person in the reference?</label>
          <input class="form-control" type="text" name="username" id="username-inpiut">
         </div>

        <!-- Button Div -->
        <div class="hidden button">
          <button class="btn btn-outline-secondary">Upload</button>
        </div>
      </form>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="scripts/upload.js"></script>
  </body>
</html>
